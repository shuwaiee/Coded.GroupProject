@{
}
@model List<Product>

@using (Html.BeginForm("Index", "Products", FormMethod.Get))
{
    <input name = "SearchField" type="text" placeholder="Search Here ... " />
    <button type="submit">
        Search
    </button>
}
    @foreach ( var item in Model)
{
    <h1> @item.Id</h1>
    <h2> @item.Name</h2>
    <h3> @item.Price</h3>
    <img href="@item.ImageUrl"></img>
    <div>
        <a asp-action="delete" asp-route-id = "@item.Id">Delete</a>
    </div>
}





